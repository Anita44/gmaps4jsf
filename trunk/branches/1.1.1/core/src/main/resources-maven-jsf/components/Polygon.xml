<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
	<tag>polygon</tag>
	<tagClass>com.googlecode.gmaps4jsf.component.polygon.PolygonTag</tagClass>
	<componentClass>com.googlecode.gmaps4jsf.component.polygon.Polygon</componentClass>
	<componentType>com.googlecode.gmaps4jsf.Polygon</componentType>
	<componentFamily>com.googlecode.gmaps4jsf</componentFamily>
	<parent>javax.faces.component.UIComponentBase</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>hexStrokeColor</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>#f33f00</defaultValue>			
			<description>The polygon stroke hex color.</description>
		</attribute>
		
		<attribute>
			<name>lineWidth</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>5</defaultValue>			
			<description>The polygon line width.</description>
		</attribute>
		
		<attribute>
			<name>strokeOpacity</name>
			<required>false</required>	
			<type>java.lang.String</type>
			<defaultValue>1</defaultValue>					
			<description>The opacity of the polygon stroke.</description>
		</attribute>			
		
		<attribute>
			<name>hexFillColor</name>
			<required>false</required>	
			<type>java.lang.String</type>
			<defaultValue>#ff0000</defaultValue>					
			<description>The fill hexa color of the polygon.</description>
		</attribute>
				
		<attribute>
			<name>fillOpacity</name>
			<required>false</required>	
			<type>java.lang.String</type>
			<defaultValue>0.2</defaultValue>					
			<description>The fill opacity of the polygon.</description>
		</attribute>			
		
		<attribute>
			<name>jsVariable</name>
			<required>false</required>
			<type>java.lang.String</type>				
			<description>
			This flag determines the JavaScript variable you want to use for referring to the polygon.
			Use this attribute if you want to use write additional JavaScript
			code for the polygon to customize it.
			</description>
		</attribute>			
				
	</attributes>
</component>