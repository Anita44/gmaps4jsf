<!--
the gEventListener component can be a child of any visual component (map, marker, htmlInfoWindow).
//-->

<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
	<tag>gEventListener</tag>
	<tagClass>com.googlecode.gmaps4jsf.component.geventlistener.GEventListenerTag</tagClass>
	<componentClass>com.googlecode.gmaps4jsf.component.geventlistener.GEventListener</componentClass>
	<componentType>com.googlecode.gmaps4jsf.GEventListener</componentType>
	<componentFamily>com.googlecode.gmaps4jsf</componentFamily>
	<parent>javax.faces.component.UIComponentBase</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>eventName</name>
			<required>true</required>
			<type>java.lang.String</type>
			<description>The name of the event. like "click", "moveend", ...etc</description>
		</attribute>
		<attribute>
			<name>jsFunction</name>
			<required>true</required>	
			<type>java.lang.String</type>
			<description>The JavaScript function call.</description>
		</attribute>
		
	</attributes>
</component>