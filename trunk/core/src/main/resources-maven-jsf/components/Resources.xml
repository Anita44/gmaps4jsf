<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
	<tag>resources</tag>
	<tagClass>com.googlecode.gmaps4jsf.component.resources.ResourcesTag</tagClass>
	<componentClass>com.googlecode.gmaps4jsf.component.resources.Resources</componentClass>
	<componentType>com.googlecode.gmaps4jsf.Resources</componentType>
	<componentFamily>com.googlecode.gmaps4jsf</componentFamily>
	<rendererType>com.googlecode.gmaps4jsf.component.resources.ResourcesRenderer</rendererType>	
	<rendererClass>com.googlecode.gmaps4jsf.component.resources.ResourcesRenderer</rendererClass>		
	<parent>javax.faces.component.UIOutput</parent>
	<attributes>
		&standard_uicomponent_attributes;	
		<attribute>
			<name>key</name>
			<required>true</required>
			<type>java.lang.String</type>			
			<description>The Google Map key to include.</description>
		</attribute>
		
		<attribute>
			<name>includeExtendedComponents</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>false</defaultValue>							
			<description>This flag determines whether to include the gmaps utility project components. The default value is false.</description>
		</attribute>					
	</attributes>
</component>