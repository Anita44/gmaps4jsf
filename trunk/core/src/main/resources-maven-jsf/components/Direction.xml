<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
    <tag>direction</tag>
    <tagClass>com.googlecode.gmaps4jsf.component.direction.DirectionTag</tagClass>
    <componentClass>com.googlecode.gmaps4jsf.component.direction.Direction</componentClass>
    <componentType>com.googlecode.gmaps4jsf.Direction</componentType>
    <componentFamily>com.googlecode.gmaps4jsf</componentFamily>
    <rendererType>com.googlecode.gmaps4jsf.component.direction.DirectionRenderer</rendererType>
    <rendererClass>com.googlecode.gmaps4jsf.component.direction.DirectionRenderer</rendererClass>
    <parent>javax.faces.component.UIOutput</parent>
    <attributes>
        &standard_uicomponent_attributes;
        <attribute>
            <name>for</name>
            <required>true</required>
            <type>java.lang.String</type>
            <description>The map id to attach direction to.</description>
        </attribute>
        <attribute>
            <name>fromAddress</name>
            <required>true</required>
            <type>java.lang.String</type>
            <description>The direction from address.</description>
        </attribute>
        <attribute>
            <name>toAddress</name>
            <required>true</required>
            <type>java.lang.String</type>
            <description>The direction to address.</description>
        </attribute>
        
        <attribute>
            <name>style</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>The direction style.</description>
        </attribute>
        <attribute>
            <name>styleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>The direction style class.</description>
        </attribute>       
        <attribute>
            <name>locale</name>
            <required>false</required>
            <type>java.lang.String</type>
			<defaultValue>en_US</defaultValue>            
            <description>The direction locale. default is en_US.</description>
        </attribute>  
        <attribute>
            <name>travelMode</name>
            <required>false</required>
            <type>java.lang.String</type>
			<defaultValue>G_TRAVEL_MODE_WALKING</defaultValue>            
            <description>The direction travel mode. Possible values are (G_TRAVEL_MODE_WALKING, G_TRAVEL_MODE_DRIVING).</description>
        </attribute>
        <attribute>
            <name>avoidHighways</name>
            <required>false</required>
            <type>java.lang.String</type>
			<defaultValue>false</defaultValue>            
            <description>This flag determines to avoid the highway. default is false.</description>
        </attribute>        
        <attribute>
            <name>preserveViewport</name>
            <required>false</required>
            <type>java.lang.String</type>
			<defaultValue>false</defaultValue>            
            <description>This flag determines whether to preserve the map original viewport after attaching the map to.</description>
        </attribute>
    </attributes>
</component>
