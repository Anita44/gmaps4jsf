<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
	<tag>circle</tag>
	<tagClass>com.googlecode.gmaps4jsf.component.circle.CircleTag</tagClass>
	<componentClass>com.googlecode.gmaps4jsf.component.circle.Circle</componentClass>
	<componentType>com.googlecode.gmaps4jsf.Circle</componentType>
	<componentFamily>com.googlecode.gmaps4jsf</componentFamily>
	<rendererType>com.googlecode.gmaps4jsf.component.circle.CircleRenderer</rendererType>	
	<rendererClass>com.googlecode.gmaps4jsf.component.circle.CircleRenderer</rendererClass>	
	<parent>javax.faces.component.UIComponentBase</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>longitude</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>31.14</defaultValue>				
			<description>The longitude center of the circle.</description>
		</attribute>
		<attribute>
			<name>latitude</name>
			<required>false</required>	
			<type>java.lang.String</type>
			<defaultValue>30.01</defaultValue>				
			<description>The latitude center of the circle.</description>
		</attribute>	
		<attribute>
			<name>raduis</name>
			<required>false</required>	
			<type>java.lang.String</type>
			<defaultValue>200</defaultValue>				
			<description>The raduis of the circle.</description>
		</attribute>		
		<attribute>
			<name>unit</name>
			<required>false</required>	
			<type>java.lang.String</type>
			<defaultValue>KM</defaultValue>				
			<description>The unit of the raduis can have two values: 'KM' or 'MILES'.</description>
		</attribute>			
		
		<attribute>
			<name>lineWidth</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>2</defaultValue>			
			<description>The circle line width.</description>
		</attribute>		
		
		<attribute>
			<name>hexStrokeColor</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>#000000</defaultValue>			
			<description>The circle stroke hex color.</description>
		</attribute>
		<attribute>
			<name>strokeOpacity</name>
			<required>false</required>	
			<type>java.lang.String</type>
			<defaultValue>1</defaultValue>					
			<description>The opacity of the circle stroke.</description>
		</attribute>			
		<attribute>
			<name>hexFillColor</name>
			<required>false</required>	
			<type>java.lang.String</type>
			<defaultValue>#ff0000</defaultValue>					
			<description>The fill hexa color of the circle.</description>
		</attribute>
		<attribute>
			<name>fillOpacity</name>
			<required>false</required>	
			<type>java.lang.String</type>
			<defaultValue>0.2</defaultValue>					
			<description>The fill opacity of the circle.</description>
		</attribute>			
		
		<attribute>
			<name>jsVariable</name>
			<required>false</required>
			<type>java.lang.String</type>	
			<defaultValue>var temp</defaultValue>						
			<description>
			This flag determines the JavaScript variable you want to use for referring to the circle.
			Use this attribute if you want to use write additional JavaScript
			code for the polygon to customize it.
			</description>
		</attribute>			
				
	</attributes>
</component>