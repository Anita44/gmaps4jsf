<!DOCTYPE component SYSTEM "../../../../../../../core/src/main/resources-maven-jsf/misc/component.dtd" [
    <!ENTITY standard_uicomponent_attributes SYSTEM "../../../../../../../core/src/main/resources-maven-jsf/entities/standard_uicomponent_attributes.xml">
]>
<component>
    <tag>extendedHtmlInformationWindow</tag>
    <tagClass>com.googlecode.gmaps4jsf.plugins.gmapsutility.component.MaxInfoWindowTag</tagClass>
    <componentClass>com.googlecode.gmaps4jsf.plugins.gmapsutility.component.MaxInfoWindow</componentClass>
    <componentType>com.googlecode.gmaps4jsf.MaxInfoWindow</componentType>
    <componentFamily>com.googlecode.gmaps4jsf</componentFamily>
    <parent>javax.faces.component.UIComponentBase</parent>
    <attributes>
        &standard_uicomponent_attributes;
        <attribute>
            <name>regular</name>
            <required>true</required>
            <type>java.lang.String</type>
            <description>Content of the information window.</description>
        </attribute>
        <attribute>
            <name>summary</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Content of the information window when in maximazed state.</description>
        </attribute>
        <attribute>
            <name>maxTitle</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Title of the mazimized information window.</description>
        </attribute>
        <attribute>
            <name>selectedTab</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>0</defaultValue>
            <description>Index or name of the selected tab once maximized.</description>
        </attribute>
        <attribute>
            <name>maximized</name>
            <required>false</required>
            <type>boolean</type>
            <defaultValue>false</defaultValue>
            <description>Index or name of the selected tab once maximized.</description>
        </attribute>
        <attribute>
            <name>onClose</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>JS code to execute on window close.</description>
        </attribute>
    </attributes>
</component>
