<!DOCTYPE component SYSTEM "../../../../../../../core/src/main/resources-maven-jsf/misc/component.dtd" [
    <!ENTITY standard_uicomponent_attributes SYSTEM "../../../../../../../core/src/main/resources-maven-jsf/entities/standard_uicomponent_attributes.xml">
]>
<component>
    <tag>tab</tag>
    <tagClass>com.googlecode.gmaps4jsf.plugins.gmapsutility.component.TabTag</tagClass>
    <componentClass>com.googlecode.gmaps4jsf.plugins.gmapsutility.component.Tab</componentClass>
    <componentType>com.googlecode.gmaps4jsf.Tab</componentType>
    <componentFamily>com.googlecode.gmaps4jsf</componentFamily>
    <rendererType>com.googlecode.gmaps4jsf.plugins.gmapsutility.tabbedmaxcontent.TabRenderer</rendererType>
    <rendererClass>com.googlecode.gmaps4jsf.plugins.gmapsutility.tabbedmaxcontent.TabRenderer</rendererClass>
    <parent>javax.faces.component.UIComponentBase</parent>
    <attributes>
        &standard_uicomponent_attributes;
        <attribute>
            <name>title</name>
            <required>true</required>
            <type>java.lang.String</type>
            <description>This tab title.</description>
        </attribute>
        <attribute>
            <name>content</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>The HTML text to show in the tab as content.</description>
        </attribute>
        <attribute>
            <name>contentNode</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>The DOM node ID that contains the HTML text to show in the tab as content.</description>
        </attribute>
        <attribute>
            <name>onSelect</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Javascript code to execute on tab selection.</description>
        </attribute>
    </attributes>
</component>
