<!--
   the popup component should be a child of the marker component.
//-->

<!DOCTYPE component SYSTEM "../../../../../../core/src/main/resources-maven-jsf/misc/component.dtd" [
    <!ENTITY standard_uicomponent_attributes SYSTEM "../../../../../../core/src/main/resources-maven-jsf/entities/standard_uicomponent_attributes.xml">
]>
<component>
    <tag>popup</tag>
    <tagClass>com.googlecode.gmaps4jsf.plugins.component.PopupTag</tagClass>
    <componentClass>com.googlecode.gmaps4jsf.plugins.component.Popup</componentClass>
    <componentType>com.googlecode.gmaps4jsf.popup</componentType>
    <componentFamily>com.googlecode.gmaps4jsf</componentFamily>
    <parent>javax.faces.component.UIComponentBase</parent>
    <attributes>
        &standard_uicomponent_attributes;
        <attribute>
            <name>icon</name>
            <required>true</required>
            <type>java.lang.String</type>
            <description>The icon to the left of the bubble.</description>
        </attribute>
        <attribute>
            <name>content</name>
            <required>true</required>
            <type>java.lang.String</type>
            <description>The text to show in the overlay as content.</description>
        </attribute>
        <attribute>
            <name>chartStyle</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>d_bubble_icon_text_small</defaultValue>
            <description>Valid values beyond the default are d_bubble_icon_text_big, d_bubble_icon_texts_big and d_bubble_texts_big.</description>
        </attribute>
        <attribute>
            <name>backgroundColor</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>FFFFFF</defaultValue>
            <description>The hexadecimal color of the popup background (defaults to FFFFFF).</description>
        </attribute>
        <attribute>
            <name>textColor</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>000000</defaultValue>
            <description>The hexadecimal color of the text inside the popup (defaults to 000000).</description>
        </attribute>
    </attributes>
</component>
